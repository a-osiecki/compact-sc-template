{
  "name": "example-cli",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "compact": "compact compile ./contracts/src/example.compact ./contracts/src/managed",
    "build": "rm -rf dist && tsc && cp -R ../contracts/src/managed dist/contracts/src/managed && cp ./standalone.yml dist/",
    "ci": "npm run typecheck && npm run lint && npm run build",
    "prepack": "npm run build",
    "standalone": "docker compose -f standalone.yml pull && node --experimental-specifier-resolution=node dist/cli/standalone.js",
    "testnet-remote": "node --experimental-specifier-resolution=node --loader ts-node/esm src/launcher/testnet-remote.ts",
    "testnet-remote-ps": "node --experimental-specifier-resolution=node dist/launcher/testnet-remote-start-proof-server.js",
    "testnet-local": "node --experimental-specifier-resolution=node dist/launcher/testnet-local.js"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
